<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_white">
    <TextView
        android:id="@+id/warehouse_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:text=""
        android:textSize="24sp"
        android:textColor="@color/color_white"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/warehouse_name"
        android:background="@color/color_white"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:elevation="6dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:focusable="false"
            android:textSize="16sp"
            android:id="@+id/doc_no"
            android:textColor="@color/color_black"
            android:layout_gravity="center_horizontal"
            android:hint="Doc No: " />




        <EditText
            android:id="@+id/ll_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:ems="13"
            android:focusable="false"
            android:hint="Date"
            android:drawableEnd="@drawable/ic_date" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select supplier"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-light" />

            <Spinner
                android:id="@+id/supplier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:ems="12"
                android:gravity="center"
                android:focusable="false" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/add_po"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:drawableEnd="@drawable/ic_add_black"
                android:fontFamily="sans-serif-light"

                android:text="Select PO's" />

          <androidx.recyclerview.widget.RecyclerView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/rv_po"
              android:layout_marginTop="5dp"
              android:layout_marginStart="10dp"
              app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
              app:spanCount="3"
              tools:listitem="@layout/po_item"
              />
        </LinearLayout>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:ems="13"
            android:hint="Narration"
            android:id="@+id/narration"
            android:maxLength="50"
            android:layout_marginBottom="40dp"
            />
    </LinearLayout>
</RelativeLayout>