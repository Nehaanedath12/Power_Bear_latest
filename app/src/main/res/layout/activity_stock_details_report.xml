<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StockDetailsReport">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/theme_color_red">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Stock Details"
                android:textSize="20dp"
                android:textColor="@color/color_white"
                android:gravity="center_vertical"/>

            <ImageView
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_home"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <FrameLayout
        android:id="@+id/empty_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/empty_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/empty_icon_128px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/empty_icon"
                android:text="No Collections yet!"
                android:textSize="25dp" />
        </RelativeLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_below="@+id/toolBar"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/theme_color_red">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Product"
            android:textSize="15dp"
            android:textColor="@color/color_white"/>

        <TextView
            android:id="@+id/warehouse_Head"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="WareHouse"
            android:textColor="@color/color_white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:text="Qty"
            android:textSize="15dp"
            android:textColor="@color/color_white"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/linear"
        android:id="@+id/recyclerView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/main_progress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

</RelativeLayout>