<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    tools:context=".Home">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings"
            android:layout_margin="30dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/settings"/>
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/logo"/>
    <androidx.cardview.widget.CardView
        android:layout_below="@id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="80dp"
        app:cardBackgroundColor="@color/color_white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/row_1"
               android:layout_centerHorizontal="true"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:drawableTop="@drawable/ic_truck"
                    android:ems="11"
                    android:layout_marginTop="30dp"
                    android:background="#57000000"
                    android:id="@+id/delivery"
                    android:text="Delivery Note"
                    android:textColor="@color/color_white"
                    android:layout_marginStart="5dp"
                    />
                <Button
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:drawableTop="@drawable/ic_sync"
                    android:ems="11"
                    android:textColor="@color/color_white"
                    android:text="sync"
                android:background="#57000000"
                android:layout_marginTop="30dp"
                    android:id="@+id/sync"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row_1"
                android:id="@+id/row_2"
                android:layout_centerHorizontal="true"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:drawableTop="@drawable/ic_stock_count"
                    android:textColor="@color/color_white"
                    android:text="Stock Count"
                    android:ems="11"
                    android:background="#57000000"
                    android:layout_marginTop="30dp"
                    android:id="@+id/stock_count"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:drawableTop="@drawable/ic_stock_count"
                    android:textColor="@color/color_white"
                    android:text="Goods Receipt"
                    android:ems="11"
                    android:background="#57000000"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/goods"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row_2"
                android:id="@+id/row_3"
                android:layout_centerHorizontal="true"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:drawableTop="@drawable/ic_report"
                    android:layout_weight="1"
                    android:textColor="@color/color_white"
                    android:text="Report"
                    android:ems="22"
                    android:background="#57000000"
                    android:layout_marginTop="30dp"
                    android:id="@+id/delivery_note"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
  </RelativeLayout>
</ScrollView>